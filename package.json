{
  "name": "cdlib-ui-kit",
  "version": "1.0.0",
  "description": "The toolkit for the cdlib-ui repository",
  "main": "index.html",
  "scripts": {
    "copy-install": "echo $(tput setaf 4)Copying build tool files to cdlib-ui repo $(tput sgr 0) ... && cp -prv browserslist-stats.json fractal_subtheme fractal.js gulpfile.js package-lock.json package.json postcss.config.js ../cdlib-ui/ && echo $(tput setaf 4)Moving over to cdlib-ui repo $(tput sgr 0) ... && cd ../cdlib-ui/ && echo $(tput setaf 4)Installing node packages within cdlib-ui repo $(tput sgr 0) ... && npm install && echo $(tput setaf 4)Moving back to cdlib-ui-kit repo $(tput sgr 0) ... && cd ../cdlib-ui-kit/ && echo $(tput setaf 4)All done.$(tput sgr 0)",
    "starttestserver": "http-server ./dist/ -c-1 -s",
    "stoptestserver": "pkill http-server",
    "percy": "export PERCY_TOKEN=45278516a32a947f175c5573cbc679f3821fd327da42f41d67127536577edec8 && percy exec -- node snapshots.js",
    "a11y": "pa11y-ci --sitemap http://localhost:8080/sitemap.xml --threshold 1000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdlib/cdlib-ui-kit.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdlib/cdlib-ui-kit/issues"
  },
  "homepage": "https://github.com/cdlib/cdlib-ui-kit#readme",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@frctl/fractal": "^1.2.1",
    "@frctl/mandelbrot": "^1.2.1",
    "@percy/script": "^1.0.3",
    "autoprefixer": "^9.7.4",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sitemap": "^7.6.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "http-server": "^0.12.1",
    "modern-normalize": "^0.6.0",
    "pa11y-ci": "^2.3.0",
    "postcss-import": "^12.0.1",
    "postcss-logical": "^4.0.2",
    "postcss-svg": "^3.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-property-sort-order-smacss": "^5.2.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.14.2"
  },
  "babel": {
    "retainLines": true
  },
  "browserslist": [
    "> 2% in my stats"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:compat/recommended",
      "standard"
    ],
    "globals": {
      "Vue": "readonly"
    },
    "env": {
      "browser": true
    }
  },
  "percy": {
    "version": 1,
    "snapshot": {
      "widths": [
        1000
      ]
    }
  },
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": [
      "stylelint-config-recommended-scss",
      "stylelint-config-property-sort-order-smacss"
    ],
    "rules": {
      "max-nesting-depth": [
        4,
        {
          "ignore": [
            "blockless-at-rules",
            "pseudo-classes"
          ]
        }
      ],
      "no-descending-specificity": null
    }
  },
  "dependencies": {}
}
